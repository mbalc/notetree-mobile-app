<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteTree.Pages.DetailPage"
             Title="Note Details">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Note.Created, StringFormat='Created at: {0}'}"
                VerticalOptions="Start" 
                HorizontalOptions="End"
                FontSize="Micro"
            />
            <Label Text="{Binding Note.Updated, StringFormat='Updated at: {0}'}"
                VerticalOptions="Start" 
                HorizontalOptions="End"
                FontSize="Micro"
            />
            <Label Text="{Binding Note.Content}"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand"
                FontSize="Large"
            />
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Edit" Activated="OnEdit" />
        <ToolbarItem Name="Delete" Activated="OnDelete" />
    </ContentPage.ToolbarItems>

</ContentPage>