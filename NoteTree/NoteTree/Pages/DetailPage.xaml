<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteTree.Pages.DetailPage"
             Title="Note Details">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Note.Created, StringFormat='C: {0}'}"
                VerticalOptions="Start" 
                HorizontalOptions="End"
                FontSize="Micro"
            />
            <Label Text="{Binding Note.Updated, StringFormat='U: {0}'}"
                VerticalOptions="Start" 
                HorizontalOptions="End"
                FontSize="Micro"
            />
            <Editor Text="{Binding Note.Content}"
                x:Name="ContentEditor"
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand" 
                FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Delete" Activated="OnDelete" />
    </ContentPage.ToolbarItems>

</ContentPage>