<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteTree.Pages.EditPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor Text="{Binding NewEntry.Content}"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="FillAndExpand" 
                FontSize="Medium"/>
                <!--TODO dynamically expand height of the editor-->
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Activated="OnCommit" />
    </ContentPage.ToolbarItems>
</ContentPage>